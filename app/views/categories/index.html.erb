<h2>Categories Page</h2>

<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>NAME</td>
      <td>ACTIONS</td>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
    <td>
      <%= category.id %>
    </td>
    <td>
      <%= category.name %>
    </td>
    <td>
      <a href=" <%= edit_category_path(category.id) %>" class="btn btn-primary">Edit</a>
      <a href=" <%= category_path(category.id) %>" class="btn btn-primary">See</a>
      <a href=" <%= category_path(category.id) %>" class="btn btn-danger" data-confirm="Are you sure ?" data-method="DELETE">Delete</a>
    </td>
  </tr>
    <% end %>
  </tbody>
</table>

<p>
  <a href=" <%= new_category_path %>" class="btn btn-success">
    Create new category</a>
</p>
